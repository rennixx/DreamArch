# LLM Configuration
LLM_PROVIDER=ollama

# Ollama Configuration (local LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=ministral-3:latest
# Your available models:
# - ministral-3:latest (6.0 GB) - Recommended for lyrics
# - qwen3-vl:latest (6.1 GB) - Also good for lyrics

# TTS Configuration - FREE OPTIONS AVAILABLE
TTS_PROVIDER=pyttsx3
# Options:
#   pyttsx3 - FREE, built-in Python TTS (recommended, no install needed)
#   edge     - FREE Microsoft Edge TTS API (high quality)
#   openai   - Paid OpenAI TTS (requires OPENAI_API_KEY)

# OpenAI API Key (only needed if TTS_PROVIDER=openai)
OPENAI_API_KEY=your_openai_key_here

# Anthropic API Key (if using anthropic provider)
ANTHROPIC_API_KEY=your_anthropic_key_here

# Stability AI Key (optional, for alternative music gen)
STABILITY_API_KEY=your_stability_key_here

# Model Settings (Optimized for 4GB VRAM)
MUSICGEN_MODEL=facebook/musicgen-small
CREPE_MODEL_CAPACITY=small
USE_FP16=true
MAX_GENERATION_DURATION=45

# Performance Settings
GPU_MEMORY_FRACTION=0.9
ENABLE_MODEL_CACHING=true
BATCH_SIZE=1

# Processing Settings
INPUT_SAMPLE_RATE=44100
OUTPUT_SAMPLE_RATE=44100
RECORDING_DURATION=3
QUANTIZE_RESOLUTION=16
DEFAULT_TEMPO=120
